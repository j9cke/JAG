@model Common.Models.ListAuthor
@{
    ViewBag.Title = "List Authors";
}

<div id="admin">
    <a href="Admin">Back</a>
    <h4>Admin Section</h4>
    <h5><b>Authors</b></h5>
    <div id="listbox">
        <ul>
            @{
                for (int i = 0; i < @Model._authList.Count(); i++)
                {
                    <li>
                        <p>@Model._authList[i]._firstname @Model._authList[i]._lastname</p>
                        <a href="EditAuthor?aid=@Model._authList[i]._id">Edit</a>
                        <a href="Remove?aid=@Model._authList[i]._id&isbn=0&bid=0">Remove</a>
                    </li>
                }
            }
        </ul>
    </div>
</div>